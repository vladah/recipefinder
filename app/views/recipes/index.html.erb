<!-- <<h1>Searching for - <%= @search_term %></h1> -->

<% if @recipes.nil? %>
<p>No recipes found with relevant information ... Sorry </p>
<% else %>


<<table border="1">
	<tr>
		<th>Image</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr class= <%= cycle('even', 'odd')%> >
		<td><%= link_to( image_tag(recipe["image_url"], :width => 100, :height => 100), recipe["source_url"])%></td>
		<td><%= link_to( ActionController::Base.helpers.sanitize(recipe["title"]), recipe["source_url"]) %></td>
		<td><%= recipe["social_rank"] %></td>
	</tr>
	<% end %>
</table>
<% end %>